<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 배경색 설정 -->
    <solid android:color="#F3EDED"/> <!-- 약간 더 밝은 색상으로 조정 -->

    <!-- 테두리 설정 -->
    <stroke
        android:color="#FFFFFF"
        android:width="2dp" />

    <!-- 모서리 둥글기 -->
    <corners android:radius="12dp" /> <!-- 모서리 반경을 약간 증가 -->

    <!-- 여백 설정 -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="12dp"
        android:bottom="12dp" />
</shape>
